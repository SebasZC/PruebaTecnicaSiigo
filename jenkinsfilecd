pipeline{
    agent any
    tools{
        jdk 'jdk17'
    }
    stages{
        stage('Checkout'){
            steps{
                git url: 'https://github.com/SebasZC/PruebaTecnicaSiigo.git'
            }
        }
        stage('RunTest'){
            steps{
                bat 'gradle clean aggregate --info'
            }
        }
        stage('Report'){
            steps{
                bat '.\\target\\site\\serenity\\index.html'
            }
        }
    }
    post{
        success{
            echo 'Test success'
        }
        failure{
            echo 'Test Failed'
        }
    }
}