pipeline {
    agent any
    tools {
        jdk 'jdk17'
    }
    stages {
        stage('RunTests') {
            steps {
                dir('C:/Users/Sebas/.jenkins/workspace/pipeline pruebas') {
                    bat 'gradle clean test aggregate --info'
                }
            }
        }
    }
    post {
        always {
            publishHTML(target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'C:/Users/Sebas/.jenkins/workspace/pipeline pruebas/target/site/serenity',
                    reportFiles: 'index.html',
                    reportName: 'Serenity Test Report'
            ])
        }
        success {
            echo 'Tests success'
        }
        failure {
            echo 'Tests Failed'
        }
    }
}
