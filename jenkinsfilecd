pipeline {
    agent any
    tools {
        jdk 'jdk17'
    }
    stages {
        stage('RunTests') {
            steps {
                dir('C:/Users/Sebas/.jenkins/workspace/pipeline pruebas') {
                    bat 'gradle clean test aggregate --info'
                }
            }
        }
    }
    post {
        always {
            script {
                def reportDir = 'C:/Users/Sebas/.jenkins/workspace/pipeline pruebas/target/site/serenity'
                echo "Checking if report directory exists: ${reportDir}"
                if (fileExists(reportDir)) {
                    echo "Report directory exists: ${reportDir}"
                    // Listar los archivos en el directorio del reporte
                    def files = bat(script: "dir \"${reportDir}\"", returnStdout: true)
                    echo "Files in report directory:\n${files}"
                    publishHTML(target: [
                            allowMissing: false,
                            alwaysLinkToLastBuild: true,
                            keepAll: true,
                            reportDir: reportDir,
                            reportFiles: 'index.html',
                            reportName: 'Serenity Test Report'
                    ])
                } else {
                    echo "Report directory does not exist: ${reportDir}"
                }
            }
        }
        success {
            echo 'Tests success'
        }
        failure {
            echo 'Tests Failed'
        }
    }
}
