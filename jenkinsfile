pipeline {
    agent any
    tools {
        jdk 'jdk17'
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/SebasZC/PruebaTecnicaSiigo.git'
            }
        }
        stage('Build') {
            steps {
                bat 'gradle clean build -x test'
            }
        }
        stage('Copy Build Artifacts') {
            steps {
                script {
                    def sourceDir = 'C:\\Users\\Sebas\\.jenkins\\workspace\\CI-Automation-Regres'
                    def targetDir = 'C:\\Users\\Sebas\\.jenkins\\workspace\\CD-Automation-Regres'
                    bat """
                        if not exist "${targetDir}" (
                            mkdir "${targetDir}"
                        )
                        xcopy "${sourceDir}" "${targetDir}" /E /H /Y /I
                    """
                }
            }
        }
        stage('Copy Performance Artifacts') {
            steps {
                script {
                    def performanceSourceDir = 'performance'
                    def performanceTargetDir = 'C:\\Users\\Sebas\\.jenkins\\workspace\\CD-Automation-Performance'
                    bat """
                        if not exist "${performanceTargetDir}" (
                            mkdir "${performanceTargetDir}"
                        )
                        xcopy "${performanceSourceDir}" "${performanceTargetDir}" /E /H /Y /I
                    """
                }
            }
        }
    }
    post {
        success {
            echo 'Build success'
        }
        failure {
            echo 'Build Failed'
        }
    }
}